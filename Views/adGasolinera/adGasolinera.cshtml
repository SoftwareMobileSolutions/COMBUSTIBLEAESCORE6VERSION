<script>
    (function () {
        $.extend({
            ModuloGasolinera:{
                AgregarGasolinera: {
                    AgregarUbicaion: {
                        markers: [],
                        circles: [],
                        CargarMapa: function () {
                            var _this = this

                            $.LoadAPI().then(() => {
                                const map = new google.maps.Map(document.getElementById("@{@Map}"), {
                                    center: { lat: 13.703052612879729, lng: -89.20242358465791 },
                                    zoom: 13,
                                    mapTypeId: "hybrid",
                                    gestureHandling: 'greedy'

                                });

                                map.addListener('click', function (event) {
                                    console.log("XD")
                                    _this.EliminarMarcador();
                                    _this.AgregarMarcador(event.latLng, map);
                                });
                            }).catch((error) => {
                                console.error("Error loading Google Maps API script: ", error);
                            });

                            /*const map = new google.maps.Map(document.getElementById("map"), {
                                center: { lat: 13.703052612879729, lng: -89.20242358465791 },
                                zoom: 13,
                                mapTypeId: "hybrid",
                                gestureHandling: 'greedy'

                            });

                            map.addListener('click', function (event) {
                                _this.EliminarMarcador();
                                _this.AgregarMarcador(event.latLng, map);
                            });*/

                        },
                        AgregarMarcador: function (location, map) {
                            var _this = this
                            var marker = new google.maps.Marker({
                                position: location,
                                Draggable: true,
                                map: map
                            });

                            const circle = new google.maps.Circle({
                                strokeColor: "#FF0000",
                                strokeOpacity: 0.8,
                                strokeWeight: 2,
                                fillColor: "#FF0000",
                                fillOpacity: 0.35,
                                clickable: false,
                                map,
                                center: location,
                                radius: 50
                            });

                            circle.bindTo('center', marker, 'position');

                            _this.markers.push(marker);
                            _this.circles.push(circle)
                        },
                        EliminarMarcador: function () {
                            var _this = this
                            var circles = _this.circles
                            var markers = _this.markers

                            for (var i = 0; i < markers.length; i++) {
                                markers[i].setMap(null);
                            }

                            for (var i = 0; i < circles.length; i++) {
                                circles[i].setMap(null);
                            }

                            markers = [];
                            circles = [];
                            _this.circles = circles
                            _this.markers = markers
                        },
                        Visibilidad: function () {
                            $('#@{@DIV_Mapa}').hide()
                            $('#@{@BTN_ShowHideMapa}').click(function () {
                                if ($("#@{@DIV_Mapa}").css("display") === "none") {
                                    $("#@{@Flecha}").removeClass("bi-chevron-down")
                                    $("#@{@Flecha}").addClass("bi-chevron-up")
                                    $("#@{@TXT_ShowHideMapa}").text("Ocultar")
                                } else {
                                    $("#@{@Flecha}").removeClass("bi-chevron-up")
                                    $("#@{@Flecha}").addClass("bi-chevron-down")
                                    $("#@{@TXT_ShowHideMapa}").text("Agregar Ubicación")
                                }
                                $('#@{@DIV_Mapa}').slideToggle();
                            })
                        }
                    },
                    KeyPress: function () {
                            $('#@{@Input_TelefonoGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();

                                if (keyCode < 48 || keyCode > 57) {
                                    event.preventDefault();
                                }
                                if (inputValue.length > 7) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_TelefonoGasolinera}').on("paste", function (event) {
                                event.preventDefault();
                            });

                            $('#@{@Input_NITGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();

                                if (keyCode < 48 || keyCode > 57) {
                                    event.preventDefault();
                                }
                                if (inputValue.length > 13) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_NITGasolinera}').on("paste", function (event) {
                                event.preventDefault();
                            });

                            
                            $('#@{@Input_CodigoGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();


                                if (inputValue.length > 49) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_CiudadGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();


                                if (inputValue.length > 49) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_GerenteGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();

                                if (inputValue.length > 49) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_DireccionGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();

                                if (inputValue.length > 254) {
                                    event.preventDefault();
                                }

                            });

                            $('#@{@Input_EmailGasolinera}').keypress(function (event) {
                                var keyCode = event.which;
                                var inputValue = $(this).val();

                                if (inputValue.length > 254) {
                                    event.preventDefault();
                                }

                            });
                    },
                    Validaciones: function (NombreGasolinera, CodigoGasolinera,CiudadGasolinera,GerenteGasolinera,TelefonoGasolinera,NITGasolinera,DireccionGasolinera,EmailGasolinera) {
                        var validEmail = /^\w+([.-_+]?\w+)*@@\w+([.-]?\w+)*(\.\w{2,10})+$/;
                        
                        if (NombreGasolinera === ""){
                            $._combustible.alert("error", "Campo vacio", "Debe insertar el nombre de la gasolinera")
                            return false
                        }
                        if (NombreGasolinera.length < 3) {
                            $._combustible.alert("error", "Campo vacio", "El nombre debe tener al menos tres caracteres")
                            return false
                        }

                        if(CodigoGasolinera.length > 0){
                            if (CodigoGasolinera.length < 3) {
                                $._combustible.alert("error", "Código demasiado corto", "El Código debe tener al menos tres caracteres")
                                return false
                            }
                        }

                        if(CiudadGasolinera.length > 0){
                            if (CiudadGasolinera.length < 3) {
                                $._combustible.alert("error", "Nombre demasiado corto", "El nombre de la ciudad debe tener al menos tres caracteres")
                                return false
                            }
                        }

                        if(GerenteGasolinera.length > 0){
                            if (GerenteGasolinera.length < 3) {
                                $._combustible.alert("error", "Nombre demasiado corto", "El nombre de el gerente debe tener al menos tres caracteres")
                                return false
                            }
                        }

                        if(TelefonoGasolinera.length > 0){
                            if (TelefonoGasolinera.length < 3) {
                                $._combustible.alert("error", "Nombre demasiado corto", "El nombre de el gerente debe tener al menos tres caracteres")
                                return false
                            }
                        }

                        if(TelefonoGasolinera.length > 0){
                            if (TelefonoGasolinera.length < 8) {
                                $._combustible.alert("error", "Número demasiado corto", "El Número telefónico debe tener 8 digitos")
                                return false
                            }
                        }

                        if(NITGasolinera.length > 0){
                            if (NITGasolinera.length < 14) {
                                $._combustible.alert("error", "NIT demasiado corto", "El NIT  debe tener 14 digitos")
                                return false
                            }
                        }
                        if(NITGasolinera.length > 0){
                            if (NITGasolinera.length < 14) {
                                $._combustible.alert("error", "NIT demasiado corto", "El NIT  debe tener 14 digitos")
                                return false
                            }
                        }

                        if (DireccionGasolinera.length > 0) {
                            if (DireccionGasolinera.length < 8) {
                                $._combustible.alert("error", "Dirección demasiado corta", "La dirección debe tener al menos 8 digitos")
                                return false
                            }
                        }

                        if (EmailGasolinera.length > 0) {
                            if (!validEmail.test(EmailGasolinera)) {
                                $._combustible.alert("error", "Formato de correo incorrecto", "Debe digitar  un correo valido, por ejemplo usuario@correo.com")
                                return false
                            }
                        }
                        //if() 

                        /*if(CodigoGasolinera.length > 0){
                            if (CodigoGasolinera.length < 3) {
                                $._combustible.alert("error", "Código demasiado corto", "El Código debe tener al menos tres caracteres")
                                return false
                            }
                        }*/
                        return true
                    },
                    BTN_GuardaGasolinera: function () {
                        var _this = this
                        $("#@{@BTN_GuardarGasolinera}").on("click", function () {
                            var NombreGasolinera = $("#@{@Input_NombreGasolinera}").val().trim()
                            var CodigoGasolinera = $("#@{@Input_CodigoGasolinera}").val().trim()
                            var CiudadGasolinera = $("#@{@Input_CiudadGasolinera}").val().trim()
                            var GerenteGasolinera = $("#@{@Input_GerenteGasolinera}").val().trim()
                            var TelefonoGasolinera = $("#@{@Input_TelefonoGasolinera}").val().trim()
                            var NITGasolinera = $("#@{@Input_NITGasolinera}").val().trim()
                            var DireccionGasolinera = $("#@{@Input_DireccionGasolinera}").val().trim()
                            var EmailGasolinera = $("#@{@Input_EmailGasolinera}").val().trim()

                            if (_this.Validaciones(NombreGasolinera,CodigoGasolinera,CiudadGasolinera,GerenteGasolinera,TelefonoGasolinera,NITGasolinera,DireccionGasolinera,EmailGasolinera) === true) {
                                var market = _this.AgregarUbicaion.markers[0]
                                arg = {
                                    DescriEstacionServicio: NombreGasolinera,
                                    Latitud: (market === undefined ? null : market.getPosition().lat()),
                                    Longitud: (market === undefined ? null : market.getPosition().lng()), 
                                    CodigoGasolinera :CodigoGasolinera ,  
                                    CiudadGasolinera: CiudadGasolinera,  
                                    GerenteGasolinera: GerenteGasolinera,  
                                    TelefonoGasolinera: TelefonoGasolinera,  
                                    NITGasolinera : NITGasolinera,  
                                    DireccionGasolinera : DireccionGasolinera,  
                                    EmailGasolinera: EmailGasolinera
                                }
                                
                                //console.log(arg)
                                $.post('@Url.Action("CrearGasolinera", "adGasolinera")',arg,function (mensaje) {
                                    mensaje = mensaje[0]
                                    if (mensaje.bandera === 1) {
                                        $._combustible.alert("success", "Registro Exitoso", mensaje.resultado)
                                        $("#@{@Map}").html("")
                                        $.ModuloGasolinera.AgregarGasolinera.AgregarUbicaion.CargarMapa()
                                        $("#@{@Input_NombreGasolinera}").val("")

                                        $("#@{@Input_CodigoGasolinera}").val("")
                                        $("#@{@Input_CiudadGasolinera}").val("")
                                        $("#@{@Input_GerenteGasolinera}").val("")
                                        $("#@{@Input_TelefonoGasolinera}").val("")
                                        $("#@{@Input_NITGasolinera}").val("")
                                        $("#@{@Input_DireccionGasolinera}").val("")
                                        $("#@{@Input_EmailGasolinera}").val("")

                                        //$('#DIV_Mapa').slideToggle();
                                        $('#@{@DIV_Mapa}').hide()
                                        $("#@{@Flecha}").removeClass("bi-chevron-up")
                                        $("#@{@Flecha}").addClass("bi-chevron-down")
                                        $("#@{@TXT_ShowHideMapa}").text("Agregar Ubicación")
                                        $.ModuloGasolinera.GRID.DataGrid()
                                    } else {
                                        $._combustible.alert("error", "Error", mensaje.resultado)
                                    }
                                
                                })
                            }
                        });
                    }
                },
                GRID: {
                    CargarGrid: function () {
                        $("#@{@GRID_Gasolinera}").html("");
                        $("#@{@GRID_Gasolinera}").kendoGrid({
                            dataSource: {
                                pageSize: 15
                            },
                            scrollable: true,
                            toolbar: ["search"],
                            themeColor: "Purple",
                            columns: [
                                {
                                    field: "nombre",
                                    title: "Nombre",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "codigo",
                                    title: "Codigo",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "ciudad",
                                    title: "Ciudad",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "gerente",
                                    title: "Gerente",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "telefono",
                                    title: "Telefono",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "nIT",
                                    title: "NIT",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "direccion",
                                    title: "Direccion",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "email",
                                    title: "Email",
                                    attributes: { class: "col-data" },
                                    headerAttributes: { class: "col-data" },
                                },
                                {
                                    field: "latLng",
                                    type: "string",
                                    title: "Ubicación",
                                    filterable: false,
                                    attributes: { class: "col-ubicacion" },
                                    headerAttributes: { class: "col-ubicacion" },
                                    /*template: function (data) {
                                        if (data.latitud !== 0 && data.longitud !== 0) {
                                            return '<button type="button" class="btn btn-success " onclick = "$.GRID.Modal.Mostrar(' + data.latitud + ',' + data.longitud + ',' +'"' + data.nombre+'"' + ' )"> <i class="bi bi-geo"></i> Mostrar Ubicacion</button>'
                                        }else{
                                            return '<span></span>'
                                        }
                                        console.log(data)
                                    }*/
                                    template: function (data) {
                                        if (data.latitud !== 0 && data.longitud !== 0) {
                                            return '<button type="button" class="btn btn-success" onclick="$.ModuloGasolinera.GRID.Modal.Mostrar(' + data.latitud + ', ' + data.longitud + ', \'' + data.nombre + '\')"> <i class="bi bi-geo"></i> Mostrar Ubicación</button>';
                                        } else {
                                            return '<span></span>';
                                        }
                                    }


                                }

                            ],
                            pageable: true,
                            mobile: "phone",
                            dataBound: function (e) {
                                $("#@{@GRID_Gasolinera} > div span input").attr("placeholder", "Busqueda")
                            }
                        });

                    },
                    DataGrid: function () {
                        $.get('@Url.Action("ObtenerGasolineras", "adGasolinera")', function (Gasolineras) {
                            //console.log(Gasolineras)
                            $("#@{@GRID_Gasolinera}").data("kendoGrid").dataSource.data(Gasolineras)
                        })
                    },
                    Modal: {
                        Mostrar: function (latitud, longitud,Nombre) {
                            $("#@{@Modal_body_mapa}").html("");
                            var DIV = '<div id="@{@MapaModal}" style="height:50vh;"><div>'
                            $("#@{@Modal_body_mapa}").html(DIV);
                            $("#@{@TXT_NombreGasolineraModal}").text(Nombre)
                            const map = new google.maps.Map(document.getElementById("@{@MapaModal}"), {
                                center: { lat: latitud, lng: longitud },
                                zoom: 19,
                                mapTypeId: "hybrid",
                            });

                            const cityCircle = new google.maps.Circle({
                                strokeColor: "#FF0000",
                                strokeOpacity: 0.8,
                                strokeWeight: 2,
                                fillColor: "#FF0000",
                                fillOpacity: 0.35,
                                map,
                                center: { lat: latitud, lng: longitud },
                                radius: 50
                            });

                            var marker = new google.maps.Marker({
                                position: { lat: latitud, lng: longitud },
                                map: map
                            });
                            $("#@{@ModalMapa}").modal("show")
                        }
                    }
                },
                init: function () {
                    var _this = this;
                    _this.AgregarGasolinera.AgregarUbicaion.CargarMapa()
                    _this.AgregarGasolinera.AgregarUbicaion.Visibilidad()
                    _this.AgregarGasolinera.BTN_GuardaGasolinera()
                    _this.GRID.CargarGrid()
                    _this.GRID.DataGrid()
                    _this.AgregarGasolinera.KeyPress()

                }
            }
        })
        $.ModuloGasolinera.init()  
    })();
</script>