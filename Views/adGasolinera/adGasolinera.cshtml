@{
    Layout = null;

    string guid = System.Guid.NewGuid().ToString().Replace("-", ""),
    Input_NombreGasolinera = "Input_NombreGasolinera_" + guid,
    Input_CodigoGasolinera = "Input_CodigoGasolinera_" + guid,
    Input_CiudadGasolinera = "Input_CiudadGasolinera_" + guid,
    Input_GerenteGasolinera = "Input_GerenteGasolinera_" + guid,
    Input_TelefonoGasolinera = "Input_TelefonoGasolinera_" + guid,
    Input_NITGasolinera = "Input_NITGasolinera_" + guid,
    Input_DireccionGasolinera = "Input_DireccionGasolinera_" + guid,
    Input_EmailGasolinera = "Input_EmailGasolinera" + guid,
    BTN_ShowHideMapa = "BTN_ShowHideMapa_" + guid,
    TXT_ShowHideMapa = "TXT_ShowHideMapa_" + guid,
    Flecha = "Flecha_" + guid,
    BTN_GuardarGasolinera = "BTN_GuardarGasolinera_" + guid,
    DIV_Mapa = "DIV_Mapa_" + guid,
    Map = "Map_" + guid,
    GRID_Gasolinera = "GRID_Gasolinera_" + guid,
    ModalMapa = "ModalMapa_" + guid,
    TXT_NombreGasolineraModal = "TXT_NombreGasolineraModal_" + guid,
    Modal_body_mapa = "Modal_body_mapa_" + guid,
    MapaModal = "MapaModal_" + guid;
}
<section>
    <div class="container-fluid card p-lg-4 p-3">
        <div class="row"> 
            <div class="col-lg-12">
                <h2 class="text-center">Agregar Gasolinera</h2>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6">
                <h6>Ingrese el nombre de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2" id="@{@Input_NombreGasolinera}" />
            </div>
            <div class="col-lg-6">
                <h6>Ingrese el código de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2" id="@{@Input_CodigoGasolinera}" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6">
                <h6>Ingrese la ciudad de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_CiudadGasolinera}"/>
            </div>
            <div class="col-lg-6">
                <h6>Ingrese el Gerente de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_GerenteGasolinera}"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6">
                <h6>Ingrese el telefono de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_TelefonoGasolinera}"/>
            </div>
            <div class="col-lg-6">
                <h6>Ingrese el NIT de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_NITGasolinera}"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6">
                <h6>Ingrese la dirección de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_DireccionGasolinera}"/>
            </div>
            <div class="col-lg-6">
                <h6>Ingrese el correo electronico de la Gasolinera</h6>
                <input type="text" class="form-control mt-lg-2"  id="@{@Input_EmailGasolinera}"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6">
                <button type="button" class="btn btn-success w-100 my-2 my-lg-0" id="@{@BTN_ShowHideMapa}"> <i class="bi bi-pin-map"></i> <span id="TXT_ShowHideMapa" class="ms-2"> Agregar Ubicación</span> <i id="@{@Flecha}" class="bi bi-chevron-down"></i></button>
            </div>
            <div class="col-lg-6">
                <button type="button" class="btn btn-success w-100" id="@{@BTN_GuardarGasolinera}"> <i class="bi bi-plus-circle"></i> <span> Guardar Gasolinera</span></button>
            </div>
        </div>
    </div>
    <div class="container-fluid " id="@{@DIV_Mapa}">
        <div class="card p-lg-4 p-3">
            <div class="col-lg-12">
                <h2 class="text-center"> Agregar Ubicación</h2>
            </div>
            <div class="col-lg-12">
                <div id="@{@Map}">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid card p-lg-4 p-3">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="text-center">Gasolineras</h2>
            </div>
        </div>
        <div class="row ">
            <div class="col-lg-12">
                <div id="@{@GRID_Gasolinera}">

                </div>
            </div>
        </div>
    </div>
    <div class="modal fade rounded" id="@{@ModalMapa}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> <i class="bi bi-geo"></i> <span id="@{@TXT_NombreGasolineraModal}"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="@{@Modal_body_mapa}">

                </div>
            </div>
        </div>
    </div>
</section>
